<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cart</title>
</head>
<body>
  <h1>Your products in the cart</h1>

  <% if (products.length === 0) { %>
    <p>Your cart is currently empty.</p><br>
    <p>Try to add some items to the cart</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% let totalPrice = 0; %> 
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %> zł</td>
            <td><%= product.quantity %></td>
            <td><%= (product.price * product.quantity).toFixed(2) %> zł</td>
            <td>
              <form action="/cart/remove" method="post" style="display:inline;">
                <input type="hidden" name="productId" value="<%= product.id %>">
                <button type="submit">Remove</button>
              </form>
            </td>
          </tr>
          <% totalPrice += product.price * product.quantity; %>
        <% }) %>
      </tbody>
    </table>

    <h3>In total: <%= totalPrice.toFixed(2) %> zł</h3>

  <% } %>
  <br>

  <form action="/checkout" method="post">
    <% if (products.length === 0) { %>
      <button type="submit">Place an order</button>
    <% } else { %>
      <p>You cannot place an order with an empty cart!</p>
    <% } %>
  </form>
  
  <br>
  <a href="/products">Back to products list</a>
</html>

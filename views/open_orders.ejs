<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Otwarte zamówienia</title>
</head>
<body>
  <h1>Otwarte zamówienia</h1>

  <% if (orders.length === 0) { %>
    <p>Brak otwartych zamówień.</p>
  <% } else { %>
    <table border="1">
      <thead>
        <tr>
          <th>Użytkownik</th>
          <th>Produkt</th>
          <th>Opis</th>
          <th>Cena</th>
          <th>Ilość</th>
          <th>Razem</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.user_name %></td>
            <td><%= order.product_name %></td>
            <td><%= order.product_description %></td>
            <td><%= order.product_price %> zł</td>
            <td><%= order.quantity %></td>
            <td><%= (order.product_price * order.quantity).toFixed(2) %> zł</td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <br>
</body>
</html>

<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Products</title>
</head>
<body>
  <h1>List of available products</h1>

  <% if (products.length === 0) { %>
    <p>No products are currently in the offer.</p>
  <% } else { %>
    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Price</th>
          <th>Description</th>
          <th>Add to cart</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.price %> z≈Ç</td>
            <td><%= product.description %></td>
            <td>
              <% if (user) { %>
                <form action="/cart/add" method="POST">
                  <input type="hidden" name="productId" value="<%= product.id %>">
                  <input type="number" name="quantity" value="1" min="1" required>
                  <button type="submit">Add</button>
                </form>
              <% } else { %>
                <p>You need to be logged in to add to a cart</p>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <br>
  <a href="/">Back to the index page</a>
</body>
</html>

<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Moje zamówienia</title>
</head>
<body>
  <h1>Twoje zamówienia</h1>

  <% if (orders.length > 0) { %>
    <table border="1">
      <thead>
        <tr>
          <th>ID Zamówienia</th>
          <th>Data</th>
          <th>Status</th>
          <th>Suma</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.id %></td>
            <td><%= new Date(order.created_at).toLocaleString() %></td>
            <td><%= order.status %></td>
            <td><%= order.total %> PLN</td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>Nie masz żadnych złożonych zamówień.</p>
  <% } %>

  <br>
  <a href="/products">Powrót do produktów</a>
</body>
</html>
